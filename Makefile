frontend_dir = ui
frontend_runner = bun
bin_name = pgpanel

dev-ui:
	@cd $(frontend_dir) && $(frontend_runner) run dev

build-ui:
	@cd $(frontend_dir) && $(frontend_runner) run build

build-server:
	@go build -ldflags="-s -w" -o ./bin/$(bin_name) cmd/main.go
	@echo "server built âœ“"

run-server:
	@go run cmd/main.go

build: build-ui build-server
	

